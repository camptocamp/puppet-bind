# File managed by puppet
zone "<%=_name%>" IN {
  type master;
  file "/etc/bind/views/<%= view %>/pri/<%=_name%>.conf";
<% if zone_xfers and not zone_xfers.empty? -%>
  <% if zone_xfers.is_a?(Array) -%>
  allow-transfer { <%= zone_xfers.join('; ') -%>; };
  <% else -%>
  allow-transfer { <%= zone_xfers %>; };
  <% end -%>
<% else -%>
  allow-transfer { none; };
<% end -%>
  allow-query { any; };
  notify yes;
};
